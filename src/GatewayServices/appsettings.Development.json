{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "IdentityServer": {
    "Authority": "http://localhost:5000"
  },
  "ReverseProxy": {
    "Routes": {
      "auctions": {
        "ClusterId": "auctions",
        "Match": {
          "Path": "/auctions/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/auctions/{**catch-all}"
          }
        ]
      },
      "assets": {
        "ClusterId": "assets",
        "Match": {
          "Path": "/assets/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/assets/{**catch-all}"
          }
        ]
      },
      "search": {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transforms": [
          {
            "PathPattern": "api/search/{**catch-all}"
          }
        ]
      },
      "bids": {
        "ClusterId": "bids",
        "Match": {
          "Path": "/bids/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "api/bids/{**catch-all}"
          }
        ]
      },
      "notifications": {
        "ClusterId": "notifications",
        "Match": {
          "Path": "/notificationHub/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "notificationHub/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "auctions": {
        "Destinations": {
          "auctionsApi": {
            "Address": "http://localhost:7001"
          }
        }
      },
      "assets": {
        "Destinations": {
          "assetsApi": {
            "Address": "http://localhost:7001"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://localhost:7002"
          }
        }
      },
      "bids": {
        "Destinations": {
          "bidsApi": {
            "Address": "http://localhost:7003"
          }
        }
      },
      "notifications": {
        "Destinations": {
          "notificationsApi": {
            "Address": "http://localhost:7004"
          }
        }
      }
    }
  }
}
